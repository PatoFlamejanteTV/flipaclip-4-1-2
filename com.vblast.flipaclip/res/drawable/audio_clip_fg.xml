<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/audio_clip_round_edge_radius" />
            <stroke android:width="1.0dip" android:color="?fcColorBackground" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <corners android:radius="@dimen/audio_clip_round_edge_radius" />
            <stroke android:width="1.0dip" android:color="?fcColorAccent" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/audio_clip_round_edge_radius" />
            <stroke android:width="1.0dip" android:color="?fcColorAudioClipBorder" />
        </shape>
    </item>
</selector>